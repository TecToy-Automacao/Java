<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/telaprincipal">

    <Button
        android:id="@+id/btnSair"
        android:layout_width="68dp"
        android:layout_height="41dp"
        android:backgroundTint="#FFC107"
        android:text="SAIR"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.035" />

    <Button
        android:id="@+id/btnFecharConta"
        android:layout_width="158dp"
        android:layout_height="145dp"
        android:layout_marginStart="-30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="40dp"
        android:background="?android:attr/selectableItemBackground"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.28" />

    <Button
        android:id="@+id/btnFazerPedido"
        android:layout_width="165dp"
        android:layout_height="145dp"
        android:layout_marginStart="-30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="40dp"
        android:background="?android:attr/selectableItemBackground"
        android:backgroundTint="#FFC107"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.194"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.281" />

    <TextView
        android:id="@+id/txtNomeGarcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOME GARCON"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.845"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.184" />

    <TextView
        android:id="@+id/txtViewPedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:text="ADICIONE UM PEDIDO"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <LinearLayout
        android:layout_width="337dp"
        android:layout_height="279dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtQntBatata"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:background="@drawable/batata"
                    android:gravity="bottom|right"
                    android:text="0"
                    android:textAlignment="gravity"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/txtQntHamb1"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:background="@drawable/hamb1"
                    android:gravity="bottom|right"
                    android:text="0"
                    android:textAlignment="gravity"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/txtQntHamb2"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:background="@drawable/hamb2"
                    android:gravity="bottom|right"
                    android:text="0"
                    android:textAlignment="gravity"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/btnMaisQnt"
                    android:layout_width="52dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="4dp"
                    android:backgroundTint="#FFC107"
                    android:text="+"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtQntNuggets"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:background="@drawable/nuggets"
                    android:gravity="bottom|right"
                    android:text="0"
                    android:textAlignment="gravity"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/txtQntTortinha1"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:background="@drawable/tortinha"
                    android:gravity="bottom|right"
                    android:text="0"
                    android:textAlignment="gravity"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/txtQntRefri"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:background="@drawable/refri"
                    android:gravity="bottom|right"
                    android:text="0"
                    android:textAlignment="gravity"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/btnMenosQnt"
                    android:layout_width="52dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="4dp"
                    android:backgroundTint="#FFC107"
                    android:text="-"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtQntTortinha2"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:background="@drawable/tortinha2"
                    android:gravity="bottom|right"
                    android:text="0"
                    android:textAlignment="gravity"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/txtQntSuco"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:background="@drawable/suco"
                    android:gravity="bottom|right"
                    android:text="0"
                    android:textAlignment="gravity"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/txtQntSorvete"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:background="@drawable/sorvete"
                    android:gravity="bottom|right"
                    android:text="0"
                    android:textAlignment="gravity"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/btnOk"
                    android:layout_width="52dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="4dp"
                    android:backgroundTint="#FFC107"
                    android:text="OK"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="invisible" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>