<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tela3_"
    tools:context=".SettingsActivity">


    <Button
        android:id="@+id/btnVoltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="40dp"
        android:background="?android:attr/selectableItemBackground"
        android:text="Voltar"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnConfigurar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="24dp"
        android:background="?android:attr/selectableItemBackground"
        android:text="Atualizar"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btnVoltar"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="550dp"
        android:layout_height="85dp"
        android:layout_marginTop="95dp"
        android:background="#1B1919"
        android:fontFamily="sans-serif-medium"
        android:text="Tabela de PreÃ§os"
        android:textColor="#F3EFEF"
        android:textSize="60sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="5dp" />

    <EditText
        android:id="@+id/txtHamburguer"
        android:layout_width="156dp"
        android:layout_height="58dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="255dp"
        android:background="@android:drawable/editbox_background"
        android:ems="10"
        android:focusable="auto"
        android:inputType="textPersonName|numberDecimal"
        android:text="Name"
        android:textColor="#1B1A1A"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/txtFritas"
        android:layout_width="156dp"
        android:layout_height="58dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="257dp"
        android:background="@android:drawable/editbox_background"
        android:ems="10"
        android:inputType="textPersonName|numberDecimal"
        android:text="Fritas"
        android:textColor="#1B1A1A"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/txtHamburguer"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/txtSelfService"
        android:layout_width="156dp"
        android:layout_height="58dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="257dp"
        android:background="@android:drawable/editbox_background"
        android:ems="10"
        android:focusableInTouchMode="true"
        android:inputType="textPersonName|numberDecimal"
        android:text="SelfService"
        android:textColor="#1B1A1A"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/txtFritas"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/txtRefrigerante"
        android:layout_width="156dp"
        android:layout_height="58dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="257dp"
        android:background="@android:drawable/editbox_background"
        android:ems="10"
        android:focusableInTouchMode="true"
        android:inputType="textPersonName|numberDecimal"
        android:text="Refri"
        android:textColor="#1B1A1A"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/txtSelfService"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/txtSuco"
        android:layout_width="156dp"
        android:layout_height="58dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="257dp"
        android:background="@android:drawable/editbox_background"
        android:ems="10"
        android:focusableInTouchMode="true"
        android:inputType="textPersonName|numberDecimal"
        android:text="Suco"
        android:textColor="#1B1A1A"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/txtRefrigerante"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/txtSorvete"
        android:layout_width="156dp"
        android:layout_height="58dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="257dp"
        android:background="@android:drawable/editbox_background"
        android:ems="10"
        android:focusableInTouchMode="true"
        android:inputType="textPersonName|numberDecimal"
        android:text="Sobremesa"
        android:textColor="#1B1A1A"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/txtSuco"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/txtSobremesa"
        android:layout_width="156dp"
        android:layout_height="58dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="257dp"
        android:background="@android:drawable/editbox_background"
        android:ems="10"
        android:focusableInTouchMode="true"
        android:inputType="textPersonName|numberDecimal"
        android:text="Sorvete"
        android:textColor="#1B1A1A"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/txtSorvete"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="427dp"
        android:layout_height="330dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:theme="@style/ProgressBarTheme" />

</androidx.constraintlayout.widget.ConstraintLayout>